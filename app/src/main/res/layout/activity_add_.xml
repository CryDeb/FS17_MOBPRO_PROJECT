<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.st_pa.hslu_fs17_mobpro_ui.Add_Activity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/ActivityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create your Activity"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                />

            <TextView
                android:id="@+id/dateinput_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:onClick="asdf"
                android:text="5/28/2017"
                android:textAlignment="center" />
                android:layout_marginTop="10dp"
                android:layout_below="@id/ActivityTitle"
                />
            <EditText
                android:id="@+id/descriptioninput_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:background="@drawable/border"
                android:lines="10"
                android:text="Set a Description"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <EditText
                android:id="@+id/titleinput_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Set the Title of the Activity"
                android:textAlignment="center"
                android:layout_above="@id/descriptioninput_txt"
                />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="saveNewActivity"
                android:text="Save Activity"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
