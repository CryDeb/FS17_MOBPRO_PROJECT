<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.st_pa.hslu_fs17_mobpro_ui.Add_Activity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05">

            <TextView
                android:id="@+id/ActivityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:text="Create your Activity"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/titleinput_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Set the Title of the Activity"
                android:layout_alignTop="@id/ActivityTitle"
                android:layout_alignParentStart="true"
                android:layout_marginTop="43dp" />

            <EditText
                android:id="@+id/descriptioninput_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button5"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:inputType="textMultiLine"
                android:lines="10"
                android:text="Set a Description"
                android:textAlignment="viewStart"
                android:layout_below="@+id/titleinput_txt" />

            <Button
                android:id="@+id/button5"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Activity" />

        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
